<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#010912"
              tools:context=".ui.dashboard.DashBoardActivity">
    <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="14dp" android:id="@+id/cvSearch"
            android:layout_width="match_parent" app:cardElevation="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_margin="12dp"
            android:layout_height="55dp">
        <com.google.android.material.textview.MaterialTextView
                android:textColor="#6f7d8c" android:layout_width="match_parent"
                android:text="Search movies, shows" android:gravity="center"
                android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvTrend"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>